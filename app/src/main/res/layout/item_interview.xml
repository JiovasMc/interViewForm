<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header del item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/interview_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/nombre"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0" />

            <TextView
                android:id="@+id/interview_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fecha_1999"
                android:textSize="12sp"
                android:textColor="#666666"
                android:background="#F0F0F0"
                android:padding="4dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Información básica -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_correo"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/interview_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/correo_electronico"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_ubicacion"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/interview_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ciudad"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_target"
                android:textSize="14sp"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/interview_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/grado_estudios"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp" />

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/view_details_button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/ver_detalles"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                app:cornerRadius="8dp"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/ic_basura"
                android:textSize="12sp"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white"
                app:cornerRadius="8dp"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>